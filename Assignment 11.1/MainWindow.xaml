<Window x:Class="Assignment_11._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_11._1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Content="Book CRUD Operations"
               FontSize="20"
               FontFamily="Arial Black"
               FontWeight="Bold">
        </Label>
        <DataGrid Name="BooksDG"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Center">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ISBN"
                                    Binding="{Binding ISBN}"/>
                <DataGridTextColumn Header="Title"
                                    Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Author"
                                    Binding="{Binding Author}"/>
                <DataGridTextColumn Header="Description"
                                    Binding="{Binding Description}"/>

                <DataGridTemplateColumn Header="Edit Book">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
                                    Click="EditBook"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Add Book">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Add"
                                    Click="AddBook"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Delete Book">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete"
                                    Click="DeleteBook"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label HorizontalAlignment="Left" Content ="Title" Margin="66,24,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Height="28" FontSize="16"/>
        <Label HorizontalAlignment="Left" Content ="ISBN" Margin="66,94,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Height="28" FontSize="16" RenderTransformOrigin="0.467,0.484"/>
        <Label HorizontalAlignment="Left" Content ="Author" Margin="225,24,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Height="28" FontSize="16" RenderTransformOrigin="0.467,0.484"/>
        <Label HorizontalAlignment="Left" Content ="Description" Margin="225,94,0,0" Grid.Row="2" VerticalAlignment="Top" Width="110" Height="28" FontSize="16" RenderTransformOrigin="0.467,0.484"/>
        <TextBox x:Name="TitleBox" HorizontalAlignment="Left" Margin="29,57,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="32" FontSize="16" Background="#FFB7B7B7"/>
        <TextBox x:Name="ISBNBox" HorizontalAlignment="Left" Margin="29,127,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="32" FontSize="16" Background="#FFB7B7B7"/>
        <TextBox x:Name="AuthorBox" HorizontalAlignment="Left" Margin="230,57,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="32" FontSize="16" Background="#FFB7B7B7"/>
        <TextBox x:Name="DescriptionBox" HorizontalAlignment="Left" Margin="230,127,0,0" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" Height="32" FontSize="16" Background="#FFB7B7B7"/>
        <Button x:Name="SubmitButton"  Content="Submit Change" HorizontalAlignment="Left" Margin="545,86,0,0" Grid.Row="2" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.559" Height="36" Width="125" Click="SubmitChange" IsEnabled="False"/>


    </Grid>
</Window>
